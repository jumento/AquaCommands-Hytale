$C = "../Common.ui";

@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #00BCD4, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #26C6DA, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #00ACC1, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CancelButtonStyle = TextButtonStyle(
  Default: (Background: #F44336, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #EF5350, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #C62828, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 500, Height: 420);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 25);

  Label {
    Text: "AquaCommands - Create Command";
    Anchor: (Height: 45);
    Style: (
      FontSize: 24,
      TextColor: #00BCD4,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Label {
    Text: "Create custom chat commands easily";
    Anchor: (Height: 25);
    Style: (
      FontSize: 13,
      TextColor: #96a9be,
      HorizontalAlignment: Center
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 20); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "Command Name";
      Anchor: (Width: 130);
      Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
    }

    $C.@TextField #CommandNameInput {
      FlexWeight: 1;
      PlaceholderText: "e.g., yt, discord, rules";
    }
  }

  Group { Anchor: (Height: 12); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "Response Message";
      Anchor: (Width: 130);
      Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
    }

    $C.@TextField #CommandResponseInput {
      FlexWeight: 1;
      PlaceholderText: "The message sent when command is used";
    }
  }

  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 44);

    TextButton #CreateButton {
      Text: "CREATE COMMAND";
      Anchor: (Width: 200, Height: 40);
      Style: @PrimaryButtonStyle;
    }

    Group { Anchor: (Width: 16); }

    TextButton #CancelButton {
      Text: "CANCEL";
      Anchor: (Width: 110, Height: 40);
      Style: @CancelButtonStyle;
    }
  }
}
