$C = "../Common.ui";

@DeleteButtonStyle = TextButtonStyle(
  Default: (Background: #F44336, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #EF5350, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #C62828, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CancelButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #38424e, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #141c26, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 400, Height: 250);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 25);

  Label {
    Text: "Delete Command";
    Anchor: (Height: 40);
    Style: (
      FontSize: 20,
      TextColor: #F44336,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Label {
    Text: "Are you sure? This action cannot be undone.";
    Anchor: (Height: 20);
    Style: (
      FontSize: 12,
      TextColor: #96a9be,
      HorizontalAlignment: Center
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 20); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);

    Label {
      Text: "Command Name";
      Anchor: (Width: 120);
      Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
    }

    $C.@TextField #CommandNameInput {
      FlexWeight: 1;
      PlaceholderText: "Enter command to delete";
    }
  }

  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 44);

    TextButton #DeleteButton {
      Text: "DELETE";
      Anchor: (Width: 120, Height: 40);
      Style: @DeleteButtonStyle;
    }

    Group { Anchor: (Width: 16); }

    TextButton #CancelButton {
      Text: "CANCEL";
      Anchor: (Width: 100, Height: 40);
      Style: @CancelButtonStyle;
    }
  }
}
